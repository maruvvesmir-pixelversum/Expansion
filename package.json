{
  "name": "universe-evolution-simulator",
  "version": "1.0.0",
  "description": "Universe Evolution Simulator - From Big Bang to Heat Death",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build-all": "electron-builder --win --x64"
  },
  "keywords": ["physics", "cosmology", "simulation", "universe"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
