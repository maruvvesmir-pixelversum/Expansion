    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.universe.simulator",
    "productName": "Universe Evolution Simulator",
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
